<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fop.calendar.gui.SignUpController" stylesheets="@styles.css">
   
   <VBox styleClass="form-card" alignment="CENTER" spacing="20" maxWidth="400" style="-fx-background-color: #1E1E1E;">
      <Label text="Create Account" styleClass="form-title" />
      
      <VBox spacing="12" alignment="CENTER" prefWidth="300">
         <VBox spacing="5">
            <Label text="Username:" />
            <TextField fx:id="usernameField" promptText="Enter username (min 3 characters)" />
         </VBox>
         
         <VBox spacing="5">
            <Label text="Password:" />
            <PasswordField fx:id="passwordField" promptText="Enter password (min 4 characters)" />
         </VBox>
         
         <VBox spacing="5">
            <Label text="Confirm Password:" />
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" />
         </VBox>
         
         <Label fx:id="errorLabel" styleClass="error-label" text="" />
         
         <HBox spacing="10" alignment="CENTER">
            <Button fx:id="signUpButton" text="Sign Up" styleClass="button primary" defaultButton="true" prefWidth="120" />
            <Button fx:id="backButton" text="Back to Login" styleClass="button" prefWidth="140" />
         </HBox>
      </VBox>
   </VBox>
</VBox>
