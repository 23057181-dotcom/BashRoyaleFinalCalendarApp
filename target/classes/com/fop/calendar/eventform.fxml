<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fop.calendar.gui.EventFormController" style="-fx-background-color: #1E1E1E;" styleClass="event-form" stylesheets="@styles.css">
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
   
   <children>
      <Label text="Event Details" styleClass="form-title" />

      <VBox spacing="8">
         <Label text="Title:" />
         <TextField fx:id="titleField" promptText="Enter event title" />
      </VBox>

      <VBox spacing="8">
         <Label text="Description:" />
         <TextArea fx:id="descriptionField" prefRowCount="3" promptText="Enter event description" />
      </VBox>

      <Separator />

      <HBox spacing="10" alignment="CENTER_LEFT">
         <Label fx:id="dateLabel" text="Date: (Click on calendar to select)" style="-fx-font-weight: bold; -fx-font-size: 12pt; -fx-text-fill: #FFC107;" />
         <Button fx:id="changeDateButton" text="Change Date" styleClass="button" />
      </HBox>

      <HBox spacing="20">
         <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Start Time (HH:mm):" />
            <TextField fx:id="startTimeField" promptText="09:00" />
         </VBox>
         <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="End Time (HH:mm):" />
            <TextField fx:id="endTimeField" promptText="10:00" />
         </VBox>
      </HBox>

      <Separator />

      <Label text="Additional Information" style="-fx-font-weight: bold; -fx-font-size: 13pt; -fx-text-fill: #FFC107;" />

      <VBox spacing="8">
         <Label text="Location:" />
         <TextField fx:id="locationField" promptText="Enter location (optional)" />
      </VBox>

      <VBox spacing="8">
         <Label text="Attendees:" />
         <TextField fx:id="attendeesField" promptText="Enter attendees (optional)" />
      </VBox>

      <HBox spacing="20">
         <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Category:" />
            <ComboBox fx:id="categoryComboBox" promptText="Select category" />
         </VBox>
         <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Reminder (minutes before):" />
            <TextField fx:id="reminderField" promptText="15" />
         </VBox>
      </HBox>

      <Separator />

      <CheckBox fx:id="recurringCheckBox" text="Recurring Event" />

      <HBox fx:id="recurringFieldsBox" spacing="10">
         <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Interval (e.g., 1d, 1w, 2w, 1m):" />
            <TextField fx:id="intervalField" promptText="1d" />
         </VBox>
         <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Repeat Times:" />
            <TextField fx:id="timesField" promptText="5" />
         </VBox>
      </HBox>

      <HBox spacing="10" alignment="CENTER_RIGHT">
         <Button fx:id="saveButton" text="Save Event" styleClass="button primary" defaultButton="true" />
         <Button fx:id="cancelButton" text="Cancel" styleClass="button" cancelButton="true" />
      </HBox>
   </children>
</VBox>
