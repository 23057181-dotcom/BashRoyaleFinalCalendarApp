<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fop.calendar.gui.LoginController" stylesheets="@styles.css">
   
   <VBox styleClass="form-card" alignment="CENTER" spacing="20" maxWidth="400" style="-fx-background-color: #1E1E1E;">
      <Label text="Calendar and Scheduler App" styleClass="form-title" />
      <Label text="Login" style="-fx-font-size: 18pt; -fx-font-weight: bold; -fx-text-fill: #FFC107;" />
      
      <VBox spacing="15" alignment="CENTER" prefWidth="300">
         <VBox spacing="5">
            <Label text="Username:" />
            <TextField fx:id="usernameField" promptText="Enter username" />
         </VBox>
         
         <VBox spacing="5">
            <Label text="Password:" />
            <PasswordField fx:id="passwordField" promptText="Enter password" />
         </VBox>
         
         <Label fx:id="errorLabel" styleClass="error-label" text="" />
         
         <HBox spacing="10" alignment="CENTER">
            <Button fx:id="loginButton" text="Login" styleClass="button primary" defaultButton="true" prefWidth="120" />
            <Button fx:id="signUpButton" text="Sign Up" styleClass="button" prefWidth="120" />
         </HBox>
      </VBox>
   </VBox>
</VBox>
