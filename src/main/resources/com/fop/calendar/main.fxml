<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Region?>

<HBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fop.calendar.gui.MainController" stylesheets="@styles.css">
   
   <!-- Left Sidebar -->
   <VBox styleClass="sidebar" spacing="20">
      <HBox alignment="CENTER_LEFT" spacing="10">
         <Label text="ðŸ“…" style="-fx-font-size: 20pt; -fx-text-fill: #FFEB3B;" />
         <Label text="My Calendar" styleClass="sidebar-title" style="-fx-text-fill: #FFEB3B; -fx-font-weight: bold;" />
      </HBox>
      
      <VBox spacing="10">
         <Button styleClass="button" fx:id="dateSearchButton">
            <graphic>
               <HBox spacing="8" alignment="CENTER_LEFT">
                  <Label text="ðŸ”" style="-fx-font-size: 14pt;" />
                  <Label text="Search" />
               </HBox>
            </graphic>
         </Button>
         <Button styleClass="button" fx:id="rangeSearchButton">
            <graphic>
               <HBox spacing="8" alignment="CENTER_LEFT">
                  <Label text="ðŸ“…" style="-fx-font-size: 14pt;" />
                  <Label text="Search by Range" />
               </HBox>
            </graphic>
         </Button>
         <Button styleClass="button" fx:id="searchButton">
            <graphic>
               <HBox spacing="8" alignment="CENTER_LEFT">
                  <Label text="ðŸ”Ž" style="-fx-font-size: 14pt;" />
                  <Label text="Advanced Search" />
               </HBox>
            </graphic>
         </Button>
         <Button styleClass="button" fx:id="statisticsButton">
            <graphic>
               <HBox spacing="8" alignment="CENTER_LEFT">
                  <Label text="ðŸ“Š" style="-fx-font-size: 14pt;" />
                  <Label text="Analytics" />
               </HBox>
            </graphic>
         </Button>
      </VBox>
      
      <!-- Notifications Section in Sidebar -->
      <VBox spacing="10" styleClass="notifications-section-sidebar">
         <Label text="Notifications" styleClass="notifications-title" />
         <ScrollPane styleClass="notifications-scroll" fitToWidth="true" hbarPolicy="NEVER" prefHeight="150">
            <VBox fx:id="notificationsContainer" spacing="8" />
         </ScrollPane>
      </VBox>
      
      <!-- Upcoming Events Section in Sidebar -->
      <VBox spacing="10" styleClass="upcoming-events-section-sidebar" VBox.vgrow="ALWAYS">
         <Label text="Upcoming Events" styleClass="upcoming-events-title" />
         <ScrollPane styleClass="upcoming-events-scroll" fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
            <VBox fx:id="upcomingEventsContainer" spacing="8" />
         </ScrollPane>
      </VBox>
      
      <Button text="+ Add Event" styleClass="add-event-button" fx:id="sidebarCreateEventButton" />
      
      <Button text="Logout" styleClass="button danger" fx:id="logoutButton" />
   </VBox>
   
   <!-- Main Content Area -->
   <VBox styleClass="main-content" spacing="15" HBox.hgrow="ALWAYS">
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" spacing="15">
         <Button fx:id="prevMonthButton" text="&lt;" styleClass="button" />
         <Label fx:id="monthYearLabel" styleClass="content-header" />
         <Button fx:id="nextMonthButton" text="&gt;" styleClass="button" />
         <Region HBox.hgrow="ALWAYS" />
      </HBox>
      
      <!-- Calendar Section -->
      <VBox spacing="15" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
         <VBox spacing="10" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" alignment="TOP_LEFT">
            <Label text="Calendar" styleClass="calendar-section-title" />
            <GridPane fx:id="calendarGrid" styleClass="calendar-grid" hgap="15" vgap="10" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" />
         </VBox>
      </VBox>
   </VBox>
</HBox>
